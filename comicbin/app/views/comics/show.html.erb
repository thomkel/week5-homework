<div class='row'>
  <div class='col-md-5'>

         <img src=<%= @comic.image %> class="img-responsive"> 

  </div>
  <div class='col-md-7'>
    <h1> <%= @comic.title %> </h1>
    <h4> <!-- INSERT COMIC BOOK DESCRIPTION HERE WITH ERB --> 
      <%= @comic.description %>
    </h4>
    <!-- INSERT LINK TO DELETE A COMIC BOOK HERE.
         ATTACH A CLASS of 'btn btn-warning' TO THIS LINK.
         ALSO INCLUDE A CONFIRMATION MESSAGE 'Are you sure?' -->

      <%= link_to 'Delete Comic', "/delete?id=#{@comic.id}", :class => "btn btn-warning", :confirm => "Are you sure?" %>
  </div>
</div>
